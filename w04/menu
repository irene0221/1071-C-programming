#include<stdio.h>

int main(){

    int choice,height,width,type,i,j,k;

    while(1){
    printf("main menu\n");
    printf("1. Rectangle\n");
    printf("2. vertical Triangle\n");
    printf("3. Exit\n");
    printf("=> ");
    scanf("%d",&choice);
    if(choice==3)break;
    switch(choice)
    {
      case 1:
          printf("Enter height and width");
          scanf("%d %d",&height, &width);
          for(i=1;i<=height;i++){
            for(j=1;j<=width;j++){
                if(i==1 || i==height || j==1 || j==width)
                    printf("*");
                else
                    printf(" ");
            }
            printf("\n");
          }
          break;
      case 2:
        printf("Enter height and type:");
        scanf("%d %d",&height,&type);
        if(type==1){
        for(i=1;i<=height;i++){
            for(j=1;j<=height;j++){
               if(i==height || i==j || j==1)
                    printf("*");
                else
                    printf(" ");
            }
            printf("\n");
        }

        break;
        }else
        if(type==2){
          for(i=1;i<=height;i++){
            for(j=1;j<=height;j++){
               if(i==1 || i==j || j==height)
                    printf("*");
                else
                    printf(" ");
            }
            printf("\n");
        }

        break;
        }else
        if(type==3){
          for(i=1;i<=height;i++){
            for(j=height;j>=1;j--){
               if(i==1 || i==j || j==height)
                    printf("*");
                else
                    printf(" ");
            }
            printf("\n");
        }

        break;
        }



    }
    }
    return 0;




}
